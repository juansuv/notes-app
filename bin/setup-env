#!/bin/bash

set -e  # Detiene el script si ocurre un error

# FunciÃ³n para configurar dependencias en Linux
setup_linux_deps () {
  if command -v apt > /dev/null; then
    echo "Instalando dependencias en Linux (APT)..."
    sudo apt update
    sudo apt install -y \
      python3 \
      python3-pip \
      python3-venv \
      build-essential \
      curl \
      git \
      postgresql \
      postgresql-contrib \
      libpq-dev \
      redis \
      nodejs \
      npm \
      yarn

  elif command -v dnf > /dev/null; then
    echo "Instalando dependencias en Linux (DNF)..."
    sudo dnf install -y \
      python3 \
      python3-pip \
      python3-virtualenv \
      @development-tools \
      curl \
      git \
      postgresql-server \
      postgresql-contrib \
      postgresql-devel \
      redis \
      nodejs \
      npm \
      yarn

  else
    echo "Gestor de paquetes no soportado. Configura las dependencias manualmente."
    exit 1
  fi
}

# FunciÃ³n para configurar dependencias en macOS
setup_macos_deps () {
  echo "Instalando dependencias en macOS..."
  brew install python@3.9 \
    postgresql \
    redis \
    node \
    npm \
    yarn
  brew link --overwrite python@3.9
  brew services start postgresql
  brew services start redis
}

# Configurar entorno Python
setup_python_env () {
  echo "Configurando entorno virtual de Python en la carpeta 'server'..."
  cd "$(dirname "$0")/../server"
  python3 -m venv venv
  source venv/bin/activate
  pip install --upgrade pip
  if [ -f requirements.txt ]; then
    pip install -r requirements.txt
  else
    echo "Archivo requirements.txt no encontrado en 'server'."
  fi
  deactivate
  cd - > /dev/null
}

# Configurar entorno Node.js (React con Vite)
setup_node_env () {
  echo "Configurando entorno Node.js en la carpeta 'frontend'..."
    cd "$(dirname "$0")/../frontend"

  if [ ! -f package.json ]; then
    echo "package.json no encontrado en 'frontend'. AsegÃºrate de estar en el directorio correcto."
    exit 1
  fi
  npm install
  cd - > /dev/null
}

# Detectar sistema operativo
UNAME=$(uname)

if [ "$UNAME" = "Linux" ]; then
  setup_linux_deps
elif [ "$UNAME" = "Darwin" ]; then
  setup_macos_deps
else
  echo "Sistema operativo no soportado. Configura las dependencias manualmente."
  exit 1
fi

# Configurar entornos
setup_python_env
setup_node_env

echo "Â¡Todas las dependencias estÃ¡n instaladas y los entornos estÃ¡n configurados! ðŸŽ‰"
